section#top-nav
  //- Navigation Menu
  nav.navbar.navbar-default(role='navigation')
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Diversity
    //- Menu
    #navbar-collapse.collapse.navbar-collapse
      ul.nav.navbar-nav
        //- Home Page
        li.hidden-xs
          a(href='index.html')
            i.fa.fa-single.fa-home
        //- Shop
        li.dropdown(aria-haspopup='true')
          a.dropdown-toggle(href='', data-toggle='dropdown')
            i.fa.fa-shopping-cart
            |  电商
            i.caret
          ul.dropdown-menu(role="menu")
            li
              a(href='shop.html')
                i.fa.fa-shopping-cart
                |  商品列表
            li
              a(href='shop-detail.html')
                i.fa.fa-gift
                |  商品描述
            li
              a(href='shop-checkout.html')
                i.fa.fa-credit-card
                |  结帐
        //- Admin Page
        li
          a(href='admin.html')
            i.fa.fa-single.fa-tachometer
      ul.nav.nav-pills.navbar-nav.navbar-right
        if user
          li.dropdown
              a.dropdown-toggle(data-target="#" data-toggle='dropdown' role="button")
                | #{user.username}&nbsp;
                span.caret
              ul.dropdown-menu(role="menu")
                li: a(href='/logout') 登出
