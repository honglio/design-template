extends ../layout

block content
  .container-fluid
    .container
      h2= title
      br
      .row
        .col-md-12
          .panel.panel-primary
            .panel-heading
              .panel-title Progress Types
              .panel-options
                a.bg(href='#sample-modal', data-toggle='modal', data-target='#sample-modal-dialog-1')
                  i.fa.fa-cog
                a(href='#', data-rel='collapse')
                  i.fa.fa-chevron-down
                a(href='#', data-rel='reload')
                  i.fa.fa-refresh
                a(href='#', data-rel='close')
                  i.fa.fa-times
            .panel-body
              .row
                .col-md-12
                  .progress
                    .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='35', aria-valuemin='0', aria-valuemax='100', style='width: 35%;')
                      span.sr-only 35% Complete (success)
            .panel-body
              .row
                .col-md-12
                  .progress.progress-bar-default
                    .progress-bar(role='progressbar', aria-valuenow='43', aria-valuemin='0', aria-valuemax='100', style='width: 43%;')
                      span.sr-only 43% Complete (success)
            .panel-body
              h5 Striped Progressbars
              .row
                .col-md-12
                  .progress.progress-striped
                    .progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100', style='width: 50%;')
                      span.sr-only 40% Complete (success)
            .panel-body
              h5 Active Progressbars
              .row
                .col-md-12
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-danger(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100', style='width: 75%;')
                      span.sr-only 40% Complete (success)
            .panel-body
              h5 Stacked Progressbars
              .row
                .col-md-12
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-success(style='width: 30%;')
                      span.sr-only 30% Complete (success)
                    .progress-bar.progress-bar-warning(style='width: 20%;')
                      span.sr-only 15% Complete (warning)
                    .progress-bar.progress-bar-danger(style='width: 40%;')
                      span.sr-only 40% Complete (danger)
