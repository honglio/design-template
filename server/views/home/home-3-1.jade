extends ../layout

block scripts
  script(type='text/javascript', src='js/vendors/jquery.mixitup.js')
  script(type='text/javascript', src='rs-plugin/js/jquery.themepunch.plugins.min.js')
  script(type='text/javascript', src='rs-plugin/js/jquery.themepunch.revolution.min.js')
  script(type='text/javascript', src='showbizpro/js/jquery.themepunch.showbizpro.min.js')
  script(type='text/javascript').
    jQuery(document).ready(function() {
      //- Slider Options
      jQuery('.tp-banner').revolution({
        delay: 90000,
        startwidth: 1170,
        startheight: 500,
        hideThumbs: 10,
        fullScreen: "on",
        fullScreenAlignForce: "on",
        fullScreenOffsetContainer: ".navigation-menu"
      });

      //- Portfolio Filter
      jQuery('#Grid').mixitup();
    });

block content
  include ../partials/module-slider-4
  //- Services Modul
  .container-fluid.modul-bt-one
    .container.modul-space-two
      include ../partials/module-service-1-1
  //
     About Us
  .container-fluid.parallax-four.modul-bt-one(data-speed='20', data-type='background')
    .container.modul-space-six
      include ../partials/advert-title-2
      include ../partials/module-advert-2
  //
     Portfolio
  .container-fluid.modul-bt-one
    .container.modul-space-eight
      include ../partials/module-mixitup-1
  include ../partials/modal-portfolio-1
  include ../partials/modal-portfolio-2
  include ../partials/modal-portfolio-3
  include ../partials/modal-portfolio-4
  include ../partials/modal-portfolio-5
  include ../partials/modal-portfolio-6
  //
     Client
  .container-fluid.module-background-three.modul-bt-one(data-speed='20', data-type='background')
    .container.modul-space-eleven
      include ../partials/module-client
  //
     Advert Bottom
  .container-fluid.modul-bt-one(data-speed='20', data-type='background')
    .container.modul-space-seven
      include ../partials/module-advert-4
