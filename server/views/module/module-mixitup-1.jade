                  .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4.modal-title Portfolio Title
                  .modal-body
                    img.portlio-list-img(src='img/theme/p1.jpg', alt='img04')
                  .modal-footer
                    a.btn.btn-default(href='#fakelink')
